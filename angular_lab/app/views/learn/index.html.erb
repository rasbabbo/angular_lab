 <div ng-controller="IndexCtrl">

	<input type="checkbox" ng-model="checked" id="check">
	<label for="check">Show The Movies!</label>

	<div ng-show="checked">

		<div ng-style="{backgroundColor: favoriteColor}">
			<input type="text" ng-model='favoriteColor' placeholder="background color"><br>

			<h1>Theese are some Good Flics</h1>
				<h3>So, I got {{movies.length}} <ng-pluralize count="movies.length" when="{'1': 'movie', 'other': 'movies'}">
				</h3>
			<h2>
				<ul ng-style = "{color: 'blue'}" ng-repeat ="movie in movies | orderBy: 'title' | limitTo: 3 ">
					<li>
						{{movie.title}}
					</li>
					<button ng-click="removeMovie(movie)">Remove this movie</button>
				</ul>
			</h2>
		</div>
	</div>

	<div ng-hide="checked">
		Gotta hit the check box to check it out
	</div>

	<div>
		<input ng-keypress="count = count + 1" ng-init="count=0">
		key press count: {{count}}
	</div>

	<div class="magic" ng-hide="removed"><br>
		Type a word holmes
		<input autofocus type="text" ng-model="typing">
			<h3>{{typing}}</h3>
	</div>
	<h3>{{notice}}</h3>

	<form ng-submit="submit()">
		Enter text and hit enter holmito!
		<input type="text" ng-model="typing">
		<input type="submit" value="add">
	</form>

	

</div> 
